// System Libraries
#include <iostream> // Input/Output Library

using namespace std; //Namespace of the System Libraries


//User Libraries



//Global Constants



//Function Prototypes



// Execution Begins Here!
int main(int argc, char** argv)
{
    //Declare Variables
    float c ;
    float f;
    cout<<"Enter a number in celsius to convert to fahrenheit"<<endl;//write user a greeting 
    cin>>c;//read user input
    f = (9/5) * c + 32.0;//convert celsius to fahrenheit
    cout<<c<< " celcius = "<<f<<" in fahrenheit"<<endl;//write fahenheit
//End
  return 0;
} 



